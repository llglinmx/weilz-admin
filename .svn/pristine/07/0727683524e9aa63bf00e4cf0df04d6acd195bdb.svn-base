				},
				memberInfo: {
					email: '',
					mobile: '',
					name: '',
					nickname: '',
					urgency_name: '',
					urgency_mobile: '',
					urgency_relation: '',
					sex: '',
					age: '',
					cottoms: '',
					allergy: '',
					operation: '',
					fetation: '',
					announcements: '',
					
				},
				lan:{}
			};
		},

		onReady() {
			// 获取顶部电量状态栏高度
			uni.getSystemInfo({
				success: (res) => {
					this.barHeight = res.statusBarHeight
				}
			});
		},
		onLoad(options) {
			this.id = options.id
			this.getDetails(options.id)
			this.getLanguage()
		},
		methods: {
			// 获取订单详情
			getDetails(id) {
				this.apiget('api/v1/store/order/' + id, {}).then(res => {
					if (res.status == 200) {
						this.orderDetails = res.data.data
						this.memberInfo = res.data.data.member_info
					}
				});
			},
			// 取消订单
			cancelOrder() {
				this.$refs.popup.open()
			},

			confirm() {
				this.apiput('api/v1/store/order/cancel_order/' + this.id).then(res => {
					if (res.status == 200) {
						this.$store.commit('upOrderState', true)
						uni.showToast({
							title: this.lan.canceledSuccessfullyz,
							icon: "none"
						})
						uni.navigateBack({
							delta: 1
						})
					} else {
						uni.showToast({
							title: res.massage,
							icon: 'none'
						})
					}
				});
			},
			
			// 确认核销
			confirmWriteOff() {
				this.$refs.popupWriteOff.open()
			},
			confirm() {
				this.apiput('api/v1/engineer/order/write_off/' + this.id, {}).then(res => {
					if (res.status == 200) {
			
						this.$store.commit('upOrderState', true)
						uni.showToast({
							title: this.lan.verificationSucceededS,
							icon: "none"
						})
						uni.navigateBack({
							delta: 1
						})
			
					} else {
						uni.showToast({
							title: res.massage,
							icon: "none"
						})
					}
				});
			},
			// 请求语言包
			getLanguage() {
				this.apiget('language/info', {
					name: 'MerchantOrder'
				}).then(res => {
					if (res.status == 200) {
						let language = res.data.language
						this.lan = res.data.language
						
						
						}
				});
			},
		}
	}
</script>

