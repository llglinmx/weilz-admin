				<view class="box-content-text-title">职位描述</view>
				<view class="box-content-text-msg">{{infoData.position_information}}</view>
			</view>
			<view class="box-content-introduce">
				<view class="box-content-introduce-title">门店介绍</view>
				<view class="box-content-introduce-text">
					门店名称：<text>{{infoData.store_info.name}}</text>
				</view>
				<view class="box-content-introduce-address">
					<view class="box-content-introduce-address-icon">
						<text class="iconfont icondingwei1 icon-font" style="color: #26BF82;font-size: 40rpx"></text>
					</view>
					<view class="box-content-introduce-address-text">
						{{infoData.store_info.address}}
					</view>
					<view class="box-content-introduce-address-more">
						<text class="iconfont icongengduo icon-font"
							style="color: #26BF82;font-size: 40rpx;margin-top: 4rpx;"></text>
					</view>
				</view>
				<view class="box-content-introduce-text">门店介绍</view>
				<view class="box-content-introduce-msg" v-html="infoData.store_info.content"></view>
			</view>
		</view>
		<view class="box-footer">
			<view class="box-footer-btn flex-center" @click="delivery" v-if="infoData.accept_status==-1">投递简历</view>
			<view class="box-footer-btn flex-center" @click="delivered" v-if="infoData.accept_status==1">已投递</view>
		</view>
		<uni-popup ref="popup" type="dialog">
			<uni-popup-dialog type="warn" mode='base' title="警告" content="你还没有个人简历信息,是否前去添加简历？" :duration="2000"
				@confirm="confirm"></uni-popup-dialog>
		</uni-popup>
		<uni-popup ref="popupBox" type="dialog">
			<uni-popup-dialog type="warn" mode='base' title="警告" content="你是否确定投递简历？" :duration="2000"
				@confirm="resumeConfirm"></uni-popup-dialog>
		</uni-popup>
	</view>
</template>

<script>
	export default {
		data() {
			return {
				barHeight: 0, //顶部电量导航栏高度
				id: '',
				infoData: {
					position: '',
					salary: '',
					recruits_number: 1,
					position_information: '',
					service_year: '',
					education: '',
					place_work: '',
					store_info: {
						name: ''
					}
				},
				isAddResume: false,
				welfareList: []
			};
		},

		onLoad(options) {
			// 获取顶部电量状态栏高度
			uni.getSystemInfo({
				success: (res) => {
					this.barHeight = res.statusBarHeight
				}
			});

			this.id = options.id
			this.getInfo(options.id)
		},
		onShow() {
			this.getResumeInfo()
		},
		methods: {

			getInfo(id) {
				this.apiget('api/v1/engineer/Recruitment/' + id, {}).then(res => {
					if (res.status == 200) {
						this.infoData = res.data.data
						if (res.data.data.position_benefits != '') {
							this.welfareList = res.data.data.position_benefits.split(',')
						}
					}
				});
			},
			// 投递简历
			delivery() {
				if (!this.isAddResume) {
					this.$refs.popup.open()
				} else {
					this.$refs.popupBox.open()
				}
			},

			resumeConfirm() {
				this.apiget('api/v1/engineer/recruitment/app_add', {
					store: this.infoData.store,
					occupation: this.infoData.position,
					occ_id: this.infoData.ps_id,
					rec_id: this.infoData.id
				}).then(res => {
					if (res.status == 200) {
						if (res.data) {
							uni.showToast({
								title: "简历投递成功",
								icon: 'none'
							})
							this.$store.commit('upDelivery', true)
							this.getInfo(this.id)
						} else {
							uni.showToast({
								title: res.massage,
								icon: 'none'
							})
						}
					}
				});
			},

			// 已投递
			delivered() {
				uni.showToast({
					title: '你的简历已投递',
					icon: "none"
				})
			},
			confirm() {
				uni.navigateTo({
					url: "../curriculumVitae/curriculumVitae"
				})
			},

			// 获取个人简历信息
			getResumeInfo() {
				this.apiget('api/v1/engineer/Recruitment/user_resume', {}).then(res => {
					if (res.status == 200) {
						if (res.data) {
							this.isAddResume = true
						}
					}
				});
			},
		}
	}
</script>

