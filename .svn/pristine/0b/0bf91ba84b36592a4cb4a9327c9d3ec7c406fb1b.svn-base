<template>
	<view class="popup-box" :class="visible?'popup-box-open':''" @click="cancel">
		<view class="popup-box-main" :class="visible?'popup-box-main-open':''" @click.stop="prevent">
			<view class="popup-box-head">
				<text class="cancel" @click="cancel">{{cancela}}</text>
				<text class="confirm" @click="confirm">{{confirma}}</text>
			</view>
			<view class="popup-box-content">
				<view class="popup-box-content-list" :key='keyNum'>
					<view class="popup-box-content-list-li" v-for="(item,index) in arrData" :key='index'
						@click="checkList(index)">
						<text>{{item.name}}</text>
						<text class="iconxuanzhong1 iconfont" style="font-size: 38rpx;color: #999;"
							v-if="!item.isCheck"></text>
						<text class="iconxuanzhong iconfont" style="font-size: 38rpx;color: #b90606;"
							v-if="item.isCheck"></text>
					</view>
				</view>
			</view>
		</view>
	</view>
</template>

<script>
	export default {
		name: "technician-list-select",
		data() {
			return {
				indicatorStyle: `height: 80rpx;`,
				value: [0],
				index: 0,
				arrData: [],
				keyNum: 0
			};
		},
		props: {
			confirma: {
				type: String,
				default: '确定'
			},
			cancela: {
				type: String,
				default: '取消'
			},
			visible: {
				type: Boolean,
				default: false
			},
			dataList: {},
			skid: {
				type: [String, Number],
				default: ''
			}
		},
		watch: {
			dataList(newVal) {
				this.arrData = newVal
			},
			skid(id) {
				if (id != '') {
					this.value = []
					this.arrData.forEach((item, index) => {
						if (item.id == id) {
							this.value.push(index)
							this.index = index
						}
					})
				}
			},
		},

		mounted() {
			this.arrData = this.dataList
		},
		methods: {

			// 列表点击
			checkList(index) {
				this.arrData[index].isCheck = !this.arrData[index].isCheck

				this.keyNum++
			},

			// 取消
			cancel() {
				this.$emit("cancel", false)
			},
			// 确定
			confirm() {
				var str = ''
				var name=''
				this.arrData.map((item) => {
					if (item.isCheck) {
						str += item.id + ','
						name += item.name + ';'
					}
				})

				this.$emit('confirm', {id:str.substr(0, str.length - 1),name:name.substr(0, name.length - 1), })
				this.cancel()
			},

			prevent() {},
		}
	}
</script>

