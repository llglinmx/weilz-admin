<script>
	export default {
		data() {
			return {
				barHeight: 0, //顶部电量导航栏高度
				id: '',
				orderDetails: {
					out_trade_no: '',
					store_name: '',
					plan_date: '',
					plan_start: '',
					plan_end: '',
					amount: '',
