<template>
	<view class="box">
		<view class="box-head" :style="{paddingTop:barHeight+'px'}">
			<!-- <nav-title-balck navTitle="系统消息"></nav-title-balck> -->
			<uni-nav-bar left-icon="arrowleft" :right-text="lan.AllRead" :border='false' left-text="" :title="lan.systemInformation"
				@clickLeft="Gback" @clickRight="allRead" />
		</view>
		<view class="box-content" :style="{display:isData?'block':'none'}">
			<z-paging ref="paging1" @query="queryList" :list.sync="dataList" 
				:refresher-angle-enable-change-continued="false" :touchmove-propagation-enabled="true"
				:use-custom-refresher="true" style="height: 100%;"
				
				:key='val' :refresherDefaultText='lans.pullDownRefresh' :loading-more-no-more-text="lans.theEnd"
				:refresherPullingText='lans.ReleaseRefresh' :refresherRefreshingText='lans.Refreshings'
				:loadingMoreDefaultText='lans.ClickMore' :loadingMoreLoadingText='lans.loadings'
				:loadingMoreNoMoreText='lans.NoMores' :loadingMoreFailText='lans.LoadFaileds'>
				<view class="box-content-main">
					<view class="box-content-list" v-for="(item,index) in dataList" :key="index">
						<view class="box-content-list-time flex-center">{{item.createtime}}</view>
						<view class="box-content-list-main" @click="read(item)">
							<view class="box-content-list-main-top" :style="{height:item.state==2?'88rpx':'auto'}">
								<view class="box-content-list-main-top-title"
									:class="item.state==2?'box-content-list-main-top-after':''"
									:style="{paddingLeft:item.state==2?'20rpx':'0'}">{{item.title}}</view>
								<view class="box-content-list-main-top-text" v-html="item.content"></view>
							</view>
							<view class="box-content-list-main-bottom">
								<view class="list-main-bottom-title">{{item.state!=2?'已查看':'点击查看'}}</view>
								<view class="list-main-bottom-more">
									<text class="iconfont icongengduo icon-font"
										style="color: #999;font-size: 28rpx;"></text>
								</view>
							</view>
						</view>
					</view>
				</view>
			</z-paging>
		</view>
		<view class="box-content" :style="{display:!isData?'block':'none'}">
			<loading-merchant v-if="isLoad" />
			<no-data v-if="!isLoad" />
			<no-data v-if="!isLoad" :msg='lans.NoDatar'/>
		</view>
		<uni-popup ref="popup" type="dialog">
			<uni-popup-dialog :determine='lan.determinert' :cancel='lan.cancelrt' :title="lan.caveatrt" :content="lan.beenRead" type="warn" mode='base' :duration="2000"
				@confirm="confirm"></uni-popup-dialog>
		</uni-popup>
		<uni-popup ref="popupView" type="dialog" :maskClick="false">
			<msg-details backgroundColor='#5DBDFE' :data='previewInfo' @close='closeView' />
		</uni-popup>
	</view>
</template>

<script>
	export default {
		data() {
			return {
				barHeight: 0, //顶部电量导航栏高度
				dataList: [],
				isData: false,
				isLoad: true,
				previewInfo:{},
				lan:{},
				 lans:{},
				    val:0,
			};
		},

		onLoad() {
			// 获取顶部电量状态栏高度
			uni.getSystemInfo({
				success: (res) => {
					this.barHeight = res.statusBarHeight
				}
			});
			this.getLanguage()
			this.getLan()
		},
		methods: {
			// 返回
			Gback() {
				uni.navigateBack({
					delta: 1
				})
			},

			// 上拉 下拉
			queryList(pageNo, pageSize) {
				this.getData(pageNo, pageSize)
			},

			// 获取首页信息
			getData(num, size) {
				var vuedata = {
					type: 3,
					page_index: num, // 请求页数，
					each_page: size, // 请求条数
				}
				this.apiget('api/v1/members/msg', vuedata).then(res => {
					if (res.status == 200) {
						if (res.data.total_rows != 0) {
							this.isData = true
							let list = res.data.data

							this.$refs.paging1.complete(list);
						} else {
							this.isData = false
							this.isLoad = false
							this.$refs.paging1.complete([]);
						}

					}
				});
			},
			// 全部已读
			allRead() {
				this.$refs.popup.open()
			},
			confirm() {
				this.apiput('api/v1/members/msg/edit', {
					type: 1
				}).then(res => {
					if (res.status == 200) {
						this.getData(1, 20)
					}
				});
			},
			closeView() {
				this.$refs.popupView.close()
			},
			read(item) {
				// this.$refs.popupView.open()
				if (item.state == 1) return
				this.apiget('api/v1/members/msg/' + item.id, {}).then(res => {
					if (res.status == 200) {
						this.previewInfo = res.data
						this.getData(1, 20)
					}
				});
			},
			// 请求语言包
			getLanguage() {
				this.apiget('language/info', {
					name: 'systemInformation'
				}).then(res => {
					if (res.status == 200) {
						let language = res.data.language
						this.lan = res.data.language
						
						
					}
				});
			},
			// 请求语言包
			getLan() {
			   this.apiget('language/info', {
			         name: 'pullUp'
				}).then(res => {
				    if (res.status == 200) {
					this.lans = res.data.language
					this.val++
				     }
				  });
				},
		}
	}
</script>

