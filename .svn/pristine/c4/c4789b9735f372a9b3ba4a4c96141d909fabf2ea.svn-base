<script>
	export default {
		data() {
			return {
				dataList: [],
				firstLoaded: false,
				isLoad: true,
				id: '',
				lan:{},
				lans:{},
				objs:{},
				val:0,
			}
		},

		props: {
			tabIndex: {
				type: Number,
				default: function() {
					return 0
				}
			},
			currentIndex: {
				type: Number,
				default: function() {
					return 0
				}
			},
			orderType: {},
			arrs:{},
			Arr:{},
			search: {
				type: String,
				default: ''
			}
		},
		watch: {
			currentIndex: {
				handler(newVal) {
					if (newVal === this.tabIndex) {
						//懒加载，当滑动到当前的item时，才去加载
						if (!this.firstLoaded) {
							this.$nextTick(() => {
								this.$refs.paging.reload();
								
							})
						}
					}
				},
				immediate: true
			},
			arrs(val){
				this.lan = val
			},
			Arr(val){
				this.lans = val
				
				this.getArr(val)
				
			},
			
			
			
		},
		created() {
			
			      
		},
		mounted() {
		
		},
		methods: {
			queryList(pageNo, pageSize) {

				var page = {
					num: pageNo,
					size: pageSize,
				}
				this.getDataList(page)
			},


			// 获取数据
			getDataList(page) {
				var vuedata = {
					page_index: page.num, // 请求页数，
					each_page: page.size, // 请求条数
					keyword: this.search, //搜索
					order_type: this.orderType, //请求类型
				}
				this.apiget('api/v1/store/order', vuedata).then(res => {
					if (res.status == 200) {
						if (res.data.length != 0) {
							let list = res.data.data
							this.$refs.paging.addData(list);
							this.firstLoaded = true;
						} else {
							this.$refs.paging.addData([]);
						}

						this.isLoad = false
					}
				});
			},
			// 取消订单
			cancelOrder(item) {
				this.$emit('openPopup', item.id)
			},

			// 查看详情
			orderDetails(id) {
				uni.navigateTo({
					url: "../../merchantOrder/orderDetails/orderDetails?id=" + id
				})
			},
			getArr(val){
				this.objs = val
				this.val++
			}

		}
	}
</script>

