<template>
	<view class="box">
		<view class="box-head" :style="{paddingTop:barHeight+'px'}">
			<nav-title-balck navTitle="应聘记录"></nav-title-balck>
		</view>
		<view class="box-content" :style="{display:isData?'block':'none'}">
			<z-paging ref="paging1" @query="queryList" :list.sync="recordList" loading-more-no-more-text="已经到底了"
				:refresher-angle-enable-change-continued="false" :touchmove-propagation-enabled="true"
				:use-custom-refresher="true" style="height: 100%;">
				<view class="box-content-list">
					<view class="box-content-list-li" v-for="(item,index) in recordList" :key="item.id">
						<view class="box-content-list-li-image">
							<image src="../../static/images/userImage.png" mode="aspectFill"></image>
						</view>
						<view class="box-content-list-li-info">
							<view class="box-content-list-li-info-top">
								<view class="box-content-list-li-info-top-title">王二麻子</view>
								<view class="box-content-list-li-info-top-text">2小时前 投递了简历</view>
							</view>
							<view class="box-content-list-li-info-text">应聘岗位：{{item.occupation}}</view>
						</view>
					</view>
				</view>
			</z-paging>
		</view>
		<view class="box-content" :style="{display:!isData?'block':'none'}">
			<loading-merchant v-if="isLoad" />
			<no-data v-if="!isLoad" />
		</view>
		
	</view>
</template>

<script>

	export default {
		data() {
			return {
				barHeight: 0, //顶部电量导航栏高度
				isData: false,
				isLoad: true,
				recordList: [],
				id:'',
				store:'',
			};
		},

		onReady() {
			// 获取顶部电量状态栏高度
			uni.getSystemInfo({
				success: (res) => {
					this.barHeight = res.statusBarHeight
				}
			});
		},
		onLoad(options) {
			var data =JSON.parse(options.data)
			this.store = data.store
			this.id = data.id
		},
		methods: {
			// 上拉 下拉
			queryList(pageNo, pageSize) {
				this.getApplicationRecord(pageNo, pageSize)
			},

			getApplicationRecord(num, size) {
				var vuedata = {
					page_index: num, // 请求页数，
					each_page: size, // 请求条数
					store:this.store,
					id:this.id,
				}
				this.apiget('api/v1/store/recruitment/app_information', vuedata).then(res => {
					if (res.status == 200) {
						if (res.data.data.length != 0) {
							this.isData = true
							let list = res.data.data
							this.$refs.paging1.complete(list);
						} else {
							this.isData = false
							this.isLoad = false
						}
					}
				});
			},
		}
	}
</script>

