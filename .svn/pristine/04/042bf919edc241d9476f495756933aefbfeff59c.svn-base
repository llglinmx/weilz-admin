<script>
	export default {
		data() {
			return {
				barHeight: 0, //顶部电量导航栏高度
				isData: false,
				isLoad: true,
				recordList: [],
				id: '',
				store: '',
				previewInfo: {},
				lan: {},
				lange: {},
				lans: {},
				val: 0,
				recordId: ''
			};
		},

		onReady() {
			// 获取顶部电量状态栏高度
			uni.getSystemInfo({
				success: (res) => {
					this.barHeight = res.statusBarHeight
				}
			});
		},
		onLoad(options) {

		},
		methods: {
			// 上拉 下拉
			queryList(pageNo, pageSize) {
				this.getApplicationRecord(pageNo, pageSize)
			},

			getApplicationRecord(num, size) {
				var vuedata = {
					page_index: num, // 请求页数，
					each_page: size, // 请求条数
				}
				this.apiget('api/v1/engineer/recruitment/application_feedback_record', vuedata).then(res => {
					if (res.status == 200) {
						if (res.data.data.length != 0) {
							this.isData = true
							let list = res.data.data
							this.$refs.paging1.complete(list);
						} else {
							this.isData = false
							this.isLoad = false
						}
					}
				});
			},
			// 聘用
			employ(item) {
				this.recordId = item.id
				this.$refs.popup.open()
			},
			// 聘用技师确认
			confirm() {
				this.apiput('api/v1/store/recruitment/business_recruitment/' + this.recordId, {
					status: 2,
					store: this.store
				}).then(res => {
					if (res.status == 200) {
						uni.showToast({
							title: '聘用信息发送成功',
							icon: 'none'
						})
						this.getApplicationRecord(1, 20)
					} else {
						uni.showToast({
							title: res.massage,
							icon: 'none'
						})
					}
				})
			},

			// 查看简历
			viewResume(item) {
				this.recordId = item.id
				this.$refs.popupView.open()
				this.apiget('api/v1/store/recruitment/accept/' + item.eid, {
					type: 1
				}).then(res => {
					this.lange = this.lan
					if (res.status == 200) {
						this.previewInfo = res.data.data
					}
				});
			},
			// 关闭简历弹出层
			closeView() {
				this.$refs.popupView.close()
				this.getApplicationRecord(1, 20)
			},

			showtime(time) {
				let date =
					typeof time === "number" ?
					new Date(time) :
					new Date((time || "").replace(/-/g, "/"));
				let diff = (new Date().getTime() - date.getTime()) / 1000;
				let dayDiff = Math.floor(diff / 86400);

				let isValidDate =
					Object.prototype.toString.call(date) === "[object Date]" &&
					!isNaN(date.getTime());

				if (!isValidDate) {
					uni.showToast({
						title: this.lan.dateFormatz,
						icon: 'none'
					})
				}
				const formatDate = function(date) {
					let today = new Date(date);
					let year = today.getFullYear();
					let month = ("0" + (today.getMonth() + 1)).slice(-2);
					let day = ("0" + today.getDate()).slice(-2);
					let hour = today.getHours();
					let minute = today.getMinutes();
					let second = today.getSeconds();
					return `${year}-${month}-${day} ${hour}:${minute}:${second}`;
				};
				//小于0或者大于等于31显示原时间
				if (isNaN(dayDiff) || dayDiff < 0 || dayDiff >= 31) {
					return formatDate(date);
				}
				return (
					(dayDiff === 0 &&
						((diff < 60 && this.lan.just) ||
							(diff < 120 && this.lan.minuteAgoz) ||
							(diff < 3600 && Math.floor(diff / 60) + this.lan.minutesAgoz) ||
							(diff < 7200 && this.lan.hourAgoz) ||
							(diff < 86400 && Math.floor(diff / 3600) + this.lan.AnHour))) ||
					(dayDiff === 1 && this.lan.yesterdayz) ||
					(dayDiff < 7 && dayDiff + this.lan.DaysAgo) ||
					(dayDiff < 31 && Math.ceil(dayDiff / 7) + this.lan.WeekAgo)
				);
			},
			// 请求语言包
			getLanguage() {
				this.apiget('language/info', {
					name: 'TechnicianRecruitments'
				}).then(res => {
					if (res.status == 200) {
						let language = res.data.language
						this.lan = res.data.language

					}
				});
			},
			// 请求语言包
			getLan() {
				this.apiget('language/info', {
					name: 'pullUp'
				}).then(res => {
					if (res.status == 200) {
						this.lans = res.data.language
						this.val++
					}
				});
			},

		}
	}
</script>

