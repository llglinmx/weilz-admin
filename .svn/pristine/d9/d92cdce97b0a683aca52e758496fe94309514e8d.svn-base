<script>
	export default {
		data() {
			return {
				barHeight: 0, //顶部电量导航栏高度,
				activeIndex: 0, //当前tabbar所在页面
				dataList: [],
				options: [{
						title: "待核销",
						number: "0",
						id: 0
					},
					{
						title: "已核销",
						number: "0",
						id: 1
					},
					{
						title: "今日预约",
						number: "0",
						id: 2
					},
					{
						title: "已评价",
						number: "0",
						id: 3
					},
				],
				userInfo: {
					name: '',
					simg: ''
				},
				isData: false,
				isLoad: true,
			}
		},

		onShow() {
			if (this.$store.state.isOrderState) {
				this.orderList(1, 20)
				this.getInfo()
			}
		},
		onLoad() {
			// 获取顶部电量状态栏高度
			uni.getSystemInfo({
				success: (res) => {
					this.barHeight = res.statusBarHeight
				}
			});
			this.getInfo()
		},

		methods: {

			// 获取个人信息
			getInfo() {
				let vuedata = {}
				this.apiget('api/v1/engineer/info', vuedata).then(res => {
					if (res.status == 200) {
						this.userInfo = res.data.engineer
						
						// this.$refs.popupView.open()
						
						
						
						this.options.map(item => {
							switch (item.id) {
								case 0:
									item.number = res.data.engineer.not_verification_order
									break;
								case 1:
									// item.number = res.data.written_off_num
									break;
								case 2:
									item.number = res.data.engineer.booking_today_num
									break;
								case 3:
									item.number = res.data.engineer.comment_num
									break;
							}
						})
					}
				});
			},

			// 关闭弹出层
			closeView() {
				this.$refs.popupView.close()
			},

			// 上拉 下拉
			queryList(pageNo, pageSize) {
				this.orderList(pageNo, pageSize)
			},


			// 订单列表
			orderList(num, size) {
				var vuedata = {
					page_index: num, // 请求页数，
					each_page: size, // 请求条数
				}
				this.apiget('api/v1/engineer/order', vuedata).then(res => {
					if (res.status == 200) {
						if (res.data.total_rows != 0) {
							this.isData = true
							let list = res.data.member
							this.$refs.paging1.complete(list);
							return false;
						}
						this.isData = false
						this.isLoad = false

					}
				});
			},


			// 详情
			orderDetails(id) {
				this.$store.commit('upOrderState', false)
				uni.navigateTo({
					url: "../../technicianOrder/orderDetails/orderDetails?id=" + id
				})
			},



			// tabbar点击
			tabbarClick(index) {
				this.activeIndex = index
				switch (index) {
					case 0: //首页

						break;
					case 1: //订单
						uni.redirectTo({
							url: "../../pages/technicianOrder/technicianOrder"
						})
						break;
					case 2: //我的
						uni.redirectTo({
							url: "../../pages/technicianMine/technicianMine"
						})
						break;
				}

			},

		}
	}
</script>

