<template>
	<view class="box">
		<view class="box-head" :style="{paddingTop:barHeight+'px'}">
			<nav-title-balck :navTitle="lan.AccountDetails"></nav-title-balck>
		</view>
		<view class="box-content">
			<view class="box-content-list">
				<view class="box-content-list-li" v-for="(item,index) in arrList" :key="index"
					@click="index==1&&showStore()">
					<view class="box-content-list-li-title">{{item.title}}</view>
					<view class="box-content-list-li-text" :style="{color:index==arrList.length-1?'#5DBDFE':'#000'}">
						{{item.text}}
					</view>
				</view>
			</view>
		</view>
		<view class="box-footer">
			<view class="box-footer-btn-del flex-center" @click="deleteAccount">{{lan.deletex}}<!-- 删除 -->
			</view>
			<view class="box-footer-btn-edit flex-center" @click="editAccount">{{lan.modifyx}}<!-- 修改 -->
			</view>
		</view>
		<uni-popup ref="popup" type="dialog">
			<uni-popup-dialog :determine='lan.determineq' :cancel='lan.cancelq' type="warn" mode='base'
				:title="lan.caveatq" :content="lan.deleteAccount" :duration="2000" @confirm="confirm">
			</uni-popup-dialog>
		</uni-popup>
	</view>
</template>

<script>
	export default {
		data() {
			return {
				barHeight: 0, //顶部电量导航栏高度
				id: '',
				storeList: [],
				arrList: [{
						title: '用户名',
						text: 'w40052',
						id: 0
					},
					{
						title: '管理门店',
						text: '0',
						id: 1
					},
					{
						title: '姓名',
						text: '郑小小',
						id: 2
					},
					{
						title: '手机号',
						text: '13859682589',
						id: 3
					},
					{
						title: '公司名称',
						text: '厦门SPA服务有限公司',
						id: 4
					},

					{
						title: '权限',
						text: '管理员',
						id: 5
					},
					{
						title: '状态',
						text: '正常',
						id: 6
					},
				],
				lan: {}
			};
		},

		onLoad(options) {
			this.getLanguage()
			// 获取顶部电量状态栏高度
			uni.getSystemInfo({
				success: (res) => {
					this.barHeight = res.statusBarHeight
				}
			});
			this.id = options.id
		},

		methods: {
			//修改
			editAccount() {
				this.$store.commit('upAddAccount', false)
				var str = {
					type: 'edit',
					id: this.id
				}
				uni.navigateTo({
					url: "../addSubAccount/addSubAccount?data=" + JSON.stringify(str)
				})
			},
			// 删除
			deleteAccount() {
				this.$refs.popup.open()
			},


			// 点击管理门店显示
			showStore() {
				var str = ''
				this.storeList.forEach(item => {
					str += item.name + ','
				})

				str = str.substring(0, str.length - 1); //去掉最后一个字符

				uni.showModal({
					title: this.lan.ManageStoresq,
					content: str,
					confirmText: this.lan.determineq, // 确认按钮文字  
					showCancel: false,
					success: function(res) {
						if (res.confirm) {
							console.log('用户点击确定');
						}
					}
				});
			},


			// 弹窗点击确认
			confirm() {
				this.apidelte('api/v1/store/admin/del/' + this.id, {}).then(res => {
					if (res.status == 200) {
						this.$store.commit('upAddAccount', true)
						uni.showToast({
							title: this.lan.AccountDeleted,
							icon: "none"
						})
						setTimeout(() => {
							uni.navigateBack({
								delta: 1
							})
						}, 500)
					}
				});
			},

			// 获取账号详情
			getDetails(id) {
				this.apiget('api/v1/store/admin/' + id, {}).then(res => {

					this.arrList.map(item => {
						switch (item.id) {
							case 0:
								item.text = res.data.member.username
								break
							case 1:
								item.text = res.data.member.store_array.length + this.lan.Homeq
								break
							case 2:
								item.text = res.data.member.name
								break
							case 3:
								item.text = res.data.member.mobile
								break
							case 4:
								item.text = res.data.member.company
								break
							case 5:
								item.text = res.data.member.type
								break
							case 6:
								item.text = res.data.member.status == 1 ? this.lan.normalq : this.lan
									.Deactivate
								break
						}
					})

					this.storeList = res.data.member.store_array
				})
			},
			// 请求语言包
			getLanguage() {
				this.apiget('language/info', {
					name: 'Accounts'
				}).then(res => {
					if (res.status == 200) {
						let language = res.data.language
						this.lan = res.data.language

						this.arrList.map(item => {
							switch (item.id) {
								case 0:
									item.title = language.usernameq
									break
								case 1:
									item.title = language.ManageStoresq
									break
								case 2:
									item.title = language.Namex
									break
								case 3:
									item.title = language.phoneq
									break
								case 4:
									item.title = language.companyNameq
									break
								case 5:
									item.title = language.Authorityz
									break
								case 6:
									item.title = language.statusq
									break
							}
						})


						this.getDetails(this.id)
					}
				});
			},
		}
	}
</script>

