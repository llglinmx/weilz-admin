					content: this.from.content, //详情
				}

				this.apipost('api/v1/store/engineer/add', vuedata).then(res => {
					if (res.status == 200) {
						this.$store.commit('upAddTechhnician', true)
						uni.showToast({
							title: this.lan.successfullyh,
							icon: 'none'
						})
						setTimeout(function() {
