			uni.getSystemInfo({
				success: (res) => {
					this.barHeight = res.statusBarHeight
				}
			});
		},
		onLoad() {
			this.getInfo()
			this.getLanguage()
		},
		methods: {
			getInfo() {
				this.apiget('api/v1/store/admin_info', {}).then(res => {
					if (res.status == 200) {
						this.infoData = res.data
					}
				});
			},




