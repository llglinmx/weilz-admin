		</uni-popup>
		<uni-popup ref="popup" type="dialog">
			<uni-popup-dialog type="warn" mode='base' title="警告" content="你是否确认聘用此技师" :duration="2000"
				@confirm="confirm"></uni-popup-dialog>
		</uni-popup>
