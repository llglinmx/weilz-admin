<template>
	<view class="box">
		<view class="box-head" :style="{paddingTop:barHeight+'px'}">
			<nav-title-balck :navTitle="lan.StoreManagementzg"></nav-title-balck>
		</view>
		<view class="box-content">
			<view class="box-content-main" @click="merchantDetails">
				<view class="box-content-main-image">
					<image :src="infoData.simg" mode="aspectFill"></image>
				</view>
				<view class="box-content-main-info">
					<view class="box-content-main-info-title">{{infoData.name}}</view>
					<view class="box-content-main-info-score">
						<!-- <score :comment="infoData.comment" /> -->
						<uni-rate :readonly="true" allow-half margin='4' size='16' v-model="infoData.comment" />
						<view style="font-size: 28rpx;color: #999;">{{infoData.comment}}</view>
					</view>
					<view class="box-content-main-info-address">{{lan.addressh}}：{{infoData.address}}</view>
				</view>
				<view class="box-content-main-more">
					<text class="iconfont icongengduo icon-font"
						style="color: #ccc;font-size: 32rpx;margin-top: 4rpx;"></text>
				</view>
			</view>

			<view class="box-content-list" v-for="(item,index) in menuList" :key="index"
				@click="menuListClick(item.id)">
				<view class="box-content-list-item">
					<view class="box-content-list-item-left">
						<view class="box-content-list-item-left-image">
							<image :src="item.image" mode="aspectFill"></image>
						</view>
						<view class="box-content-list-item-left-title">{{item.title}}</view>
					</view>
					<view class="box-content-list-item-more">
						<text class="iconfont icongengduo icon-font"
							style="color: #ccc;font-size: 32rpx;margin-top: 4rpx;"></text>
					</view>
				</view>
			</view>
		</view>
		<view class="box-footer">
			<view class="box-footer-btn flex-center" @click="editStore"
				style="margin-right: 20rpx;background: #5DBDFE;color: #fff;">
				{{lan.ModifyStore}}<!-- 修改门店信息 -->
			</view>
			<view class="box-footer-btn flex-center" @click="deleteStore">
				{{lan.DeleteStoreg}}<!-- 删除门店 -->
			</view>
		</view>
		<uni-popup ref="popup" type="dialog">
			<uni-popup-dialog :determine='lan.determineg' :cancel='lan.cancelg' type="warn" mode='base'
				:title="lan.caveathg" :content="lan.deletestoref" :duration="2000" @confirm="confirm">
			</uni-popup-dialog>
		</uni-popup>
	</view>
</template>

<script>
	export default {
		data() {
			return {
				barHeight: 0, //顶部电量导航栏高度
				id: '',
				menuList: [{
						title: "门店二维码",
						image: "../../static/images/store-code-ico.png",
						id: 0
					},
					{
						title: "项目管理",
						image: "../../static/images/store-project-ico.png",
						id: 1
					},
					{
						title: "项目分类",
						image: "../../static/images/store-room-ico.png",
						id: 2
					},
					{
						title: "技师管理",
						image: "../../static/images/store-technician-ico.png",
						id: 3
					},
					{
						title: "排班表",
						image: "../../static/images/store-scheduling-ico.png",
						id: 4
					},
					{
						title: "技师招聘",
						image: "../../static/images/store-recruit-ico.png",
						id: 5
					},
					// {
					// 	title: "房间管理",
					// 	image: "../../static/images/store-room-ico.png",
					// 	id: 6
					// },
				],
				infoData: {
					name: '',
					simg: '',
					address: '',
					comment: '0'
				},
				lan: {},
				jurisdiction: {}
			};
		},

		onShow() {
			// 获取顶部电量状态栏高度
			uni.getSystemInfo({
				success: (res) => {
					this.barHeight = res.statusBarHeight
				}
			});
			if (this.$store.state.isAddStore) {
				this.getInfo(this.id)
			}
		},
		onLoad(options) {
			// 获取权限
			this.jurisdiction = JSON.parse(uni.getStorageSync('jurisdiction'))

			this.id = options.id
			this.getInfo(options.id)
			this.getLanguage()
		},
		methods: {
			// 商家信息
			merchantDetails() {
				uni.navigateTo({
					url: "../merchantInformation/merchantInformation?id=" + this.id
				})
			},
			// 修改门店信息
			editStore() {
				console.log(this.jurisdiction)
				if (this.jurisdiction.store_change == 1) {
					this.$store.commit("upAddStore", false)
					var str = {
						type: 'edit',
						id: this.id
					}
					uni.navigateTo({
						url: "../../merchantStore/addStore/addStore?data=" + JSON.stringify(str)
					})
				} else {
					uni.showToast({
						title: '您暂无权限修改门店',
						icon: 'none'
					})
				}
			},


			// 删除门店按钮
			deleteStore() {
				if (this.jurisdiction.store_delete == 1) {
					this.$refs.popup.open()
				} else {
					uni.showToast({
						title: '您暂无权限删除门店',
						icon: 'none'
					})
				}
			},


			// 弹窗点击确认
			confirm() {
				this.apidelte('api/v1/store/store_information/del/' + this.id, {}).then(res => {
					if (res.status == 200) {
						this.$store.commit("upAddStore", true)
						uni.showToast({
							title: "删除成功",
							icon: "none"
						})
						setTimeout(function() {
							uni.navigateBack({
								delta: 1
							})
						}, 500)
					}

				});
			},


			// 菜单栏点击
			menuListClick(index) {
				switch (index) {
					case 0: //门店二维码
						uni.navigateTo({
							url: "../storeQRCode/storeQRCode"
						})
						break;
					case 1: //项目管理
						uni.navigateTo({
							url: "../projectManagement/projectManagement?id=" + this.id
						})
						break;
					case 2: //项目分类
						uni.navigateTo({
							url: '../projectClassification/projectClassification?id=' + this.id
						})
						break;
					case 3: //技师管理
						uni.navigateTo({
							url: "../technicianManagement/technicianManagement?id=" + this.id
						})
						break;
					case 4: //排班表
						uni.navigateTo({
							url: "../schedule/schedule?id=" + this.id
						})
						break;
					case 5: //技师招聘
						this.$store.commit("upAdd", false)
						let str = {
							id: this.id,
							storeName: this.infoData.name,
						}
						uni.navigateTo({
							url: "../technicianRecruit/technicianRecruit?data=" + JSON.stringify(str)
						})
						break;
					case 6: //房间管理
						uni.navigateTo({
							url: "../roomManagement/roomManagement?id=" + this.id
						})
						break;
				}
			},

			getInfo(id) {
				this.apiget('api/v1/store/store_information/' + id, {}).then(res => {
					if (res.status == 200) {
						this.infoData = res.data.member
					}
				});
			},
			// 请求语言包
			getLanguage() {
				this.apiget('language/info', {
					name: 'MerchantStores'
				}).then(res => {
					if (res.status == 200) {
						let language = res.data.language
						this.lan = res.data.language
						this.menuList.map(v => {
							switch (v.id) {
								case 0:
									v.title = language.StoreQR
									break
								case 1:
									v.title = language.projectManagementg
									break
								case 2:
									v.title = language.categoryg
									break
								case 3:
									v.title = language.TechnicianManagementg
									break
								case 4:
									v.title = language.Scheduleg
									break
								case 5:
									v.title = language.TechnicianRecruitmentg
									break
							}
						})

					}
				});
			},
		}
	}
</script>

