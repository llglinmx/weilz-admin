<template>
	<view class="popup-box" :class="visible?'popup-box-open':''" @click="cancel">
		<view class="popup-box-main" :class="visible?'popup-box-main-open':''" @click.stop="prevent">
			<view class="popup-box-head">
				<text class="cancel" @click="cancel">{{cancelx}}</text>
				<text class="confirm" @click="confirm">{{confirmx}}</text>
			</view>
			<view class="popup-box-content">
				<picker-view :indicator-style="indicatorStyle" :value="value" @change="bindChange" class="picker-view"
					:key='keyVal'>
					<picker-view-column v-for="(i,j) in dataList" :key='j'>
						<view class="item" v-for="(item,index) in i.data" :key="index">{{item.name||item}}</view>
					</picker-view-column>
				</picker-view>
			</view>
		</view>
	</view>
</template>

<script>
	export default {
		name: "select-time",
		data() {
			return {
				indicatorStyle: `height: 80rpx;`,
				value: [0, 0],
				dataList: [],
				startTime: '',
				endTime: '',
				hours: [],
				minutes: [],
				keyVal: 0
			};
		},
		props: {
			visible: {
				type: Boolean,
				default: false
			},
			checkStart: {
				// type:Object,
				// default:{start:'',end:''}
			},
			checkEnd: {},
			isType: {},
			cancelx:{
				type:String,
				default:'取消'
			},
			confirmx:{
				type:String,
				default:'确定'
			},
		},
		watch: {
			visible(val) {
				this.keyVal++
				this.value = [0, 0]
				this.hours = this.dataList[0].data[this.value[0]]
				this.minutes = this.dataList[1].data[this.value[1]]

				switch (this.isType) {
					case 'start':
						if (this.checkStart) {
							this.changeStart(this.checkStart)
						}
						break;
					case 'end':
						if (this.checkEnd) {
							this.changeEnd(this.checkEnd)
						}
						break;
				}
			},

		},
		mounted() {
			this.getHour()
			this.getMinute()
		},
		methods: {
			bindChange(e) {
				var val = e.detail.value
				this.hours = this.dataList[0].data[val[0]]
				this.minutes = this.dataList[1].data[val[1]]
			},
			// 取消
			cancel() {
				this.$emit("cancel", false)
			},
			// 确定
			confirm() {
				var hour = this.hours.split(' ');
				var minute = this.minutes.split(' ');

				var str = {
					hour: hour[0],
					minute: minute[0]
				}
				
				this.$emit('confirm', str)
				this.cancel()
			},

			prevent() {},

			// 获取小时
			getHour() {
				var hour = ''
				var arr = []
				for (var i = 0; i < 24; i++) {
					hour = i < 10 ? '0' + i + ' hour' : i + ' hour'
					arr.push(hour)
				}
				var str = {
					data: arr
				}
				this.dataList.push(str)

			},
			// 获取分钟
			getMinute() {
				var minut = ''
				var arr = []
				for (var i = 0; i < 60; i++) {
					minut = i < 10 ? '0' + i + ' Minute' : i + ' Minute'
					arr.push(minut)
				}
				var str = {
					data: arr
				}
				this.dataList.push(str)

				this.hours = this.dataList[0].data[0]
				this.minutes = this.dataList[1].data[1]
			},

			changeStart(val) {
				this.value[0] = 0
				this.value[1] = 0
				if (val != '') {
					let sp = val.split(':')
					this.dataList[0].data.forEach((item, index) => {
						var split1 = item.split(' ')
						if (sp[0] == split1[0]) {
							this.value[0] = index
						}
					})
					this.dataList[1].data.forEach((item, index) => {
						let split2 = item.split(' ')
						if (sp[1] == split2[0]) {
							this.value[1] = index
						}
					})
				}
			},
			changeEnd(val) {
				this.value[0] = 0
				this.value[1] = 0
				if (val != '') {
					let sp = val.split(':')
					this.dataList[0].data.forEach((item, index) => {
						var split1 = item.split(' ')
						if (sp[0] == split1[0]) {
							this.value[0] = index
						}
					})
					this.dataList[1].data.forEach((item, index) => {
						let split2 = item.split(' ')
						if (sp[1] == split2[0]) {
							this.value[1] = index
						}
					})
				}
			}
		}
	}
</script>

