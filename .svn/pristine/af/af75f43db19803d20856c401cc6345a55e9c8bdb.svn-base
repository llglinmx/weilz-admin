<script>
	export default {
		name: "application-info",
		data() {
			return {
				dataInfo: {},
				num: 1,
				size: 5,
				totalNum: 11
			}
		},
		props: {
			data: {

			},
		},
		computed: {
			pageIndex() {
				return this.num
			}
		},
		watch: {
			data(val) {
				this.dataInfo = this.data
			},
		},
		mounted() {
			this.dataInfo = this.data
		},
		methods: {
			// 分页
			pageChange(type) {
				switch (type) {
					case 'last': // 上一页
						if (this.num <= 1) {
							uni.showToast({
								title: '已经是第一页',
								icon: 'none'
							})
						} else {
							this.num--
						}
						break;
					case 'next': // 下一页
						if (this.num >= Math.ceil(this.totalNum / this.size)) {
							uni.showToast({
								title: '已经没有更多数据了',
								icon: 'none'
							})
						} else {
							this.num++
						}
						break;
				}
			},

			close() {
				this.$emit('close')
			},
		}
	}
</script>

